- content_for :title do
  GeodesignWorld.org

- content_for :head do
  :javascript
    $(document).ready(function() {
      $('#sign-in-link').click(function() {
        $('#sign-up-block').hide();
        $('#sign-in-link').hide();
        $('#sign-in-block').show();
        $('#sign-up-header').text('Sign in to an Existing Account')
